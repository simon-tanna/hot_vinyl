<h1>Users#profile_view</h1>
<p>Find me in app/views/users/profile_view.html.erb</p>

<%= @user.username %>

  <div class="table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th>Name</th>
        <th>Artist</th>
        <th>Price</th>
        <th>Category</th>
        <th>Vinyl Weight</th>
        <th>Catalog Number</th>
        <th>Condition</th>
        <th>Product Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <%# Evaluates if the item has been sold. Item will be shown on index page if not sold %>
        <% if product.sold_status == false %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.artist %></td>
            <td>$<%= product.price %>0</td>
            <td><%= product.category.name %></td>
            <td><%= product.vinyl_weight %></td>
            <td><%= product.catalog_number %></td>
            <td><%= product.condition %></td>
            <td><%= image_tag product.picture if product.picture.attached? %></td>
            <td><%= link_to 'Show', product %></td>
          </tr>
        <% end %>
    <% end %>
