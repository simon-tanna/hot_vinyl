<p id="notice"><%= notice %></p>
<%# Image tag to display uploaded album artwork %>
<%= image_tag @product.picture if @product.picture.attached? %>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @product.artist %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Vinyl weight:</strong>
  <%= @product.vinyl_weight %>
</p>

<p>
  <strong>Catalog number:</strong>
  <%= @product.catalog_number %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @product.condition %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.username %>
</p>

<% if user_signed_in? and (current_user.admin? or current_user.id==@product.user_id) %>
  <%= link_to 'Edit', edit_product_path(@product) %>
  <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', products_path %>
