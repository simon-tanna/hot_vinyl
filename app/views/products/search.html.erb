<h1>Search Results</h1>

<div class="table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Artist</th>
        <th scope="col">Price</th>
        <th scope="col">Seller</th>
        <th scope="col" class="d-none d-md-block"></th>
        <th scope="col">View Product</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @find_album.each do |album| %>
      <%# Evaluates if the item has been sold. Item will be shown on index page if not sold %>
        <% if album.sold_status == false %>
          <tr>
            <td><%= album.name %></td>
            <td><%= album.artist %></td>
            <td>$<%= album.price %>0</td>
            <td><%= link_to album.user.username, album.user %></td>
            <% if album.picture.attached? %>
              <td class="d-none d-md-block">
                <%= image_tag album.picture, size: "250x250", class: "img-fluid" %>
              </td>
            <% else %>
              <td class="d-none d-md-block">
                <%= image_tag("placeholder_record.jpg", alt: "placeholder record image", size: "250x250", class: "img-fluid") %>
              </td>
            <% end %>
            <td><%= link_to 'Show', album %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>