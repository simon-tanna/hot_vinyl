<h1>My Vinyl for Sale</h1>
<div class="table-responsive">
<table class="table align-middle">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Price</th>
      <th>Category</th>
      <th>Vinyl Weight</th>
      <th>Catalog Number</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <%# Evaluates if the item has been sold. Item will be shown on index page if not sold %>
      <% if product.sold_status == false %>
        <tr>
          <td><%= image_tag product.picture if product.picture.attached? %></td>
          <td><%= product.name %></td>
          <td><%= product.artist %></td>
          <td>$<%= product.price %>0</td>
          <td><%= product.category.name %></td>
          <td><%= product.vinyl_weight %></td>
          <td><%= product.catalog_number %></td>
          <td><%= product.condition %></td>
          <td><%= link_to 'Show', product %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>